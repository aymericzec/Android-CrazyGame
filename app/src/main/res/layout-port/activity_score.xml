<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameGame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="#151515"
        android:fontFamily="@font/nightmachine"
        android:gravity="center"
        android:minHeight="100dp"
        android:text="@string/app_name"
        android:textColor="#0489B1"
        android:textSize="40sp" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:useDefaultMargins="false"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/game"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="50dp"
            android:text="Morpion"
            android:textSize="40sp"/>

        <TextView
            android:layout_column="0"
            android:layout_row="1"
            android:paddingLeft="25dp"
            android:paddingBottom="25dp"
            android:text="@string/playedGame"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/playedGame"
            android:layout_column="1"
            android:layout_row="1"
            android:paddingLeft="25dp"
            android:paddingBottom="25dp"
            android:text="10"
            android:textSize="30sp"/>

        <TextView
            android:layout_column="0"
            android:layout_row="2"
            android:paddingLeft="25dp"
            android:text="@string/winGame"
            android:textSize="30sp"/>

        <TextView
            android:id="@+id/winGame"
            android:layout_column="1"
            android:layout_row="2"
            android:paddingLeft="25dp"
            android:text="10"
            android:textSize="30sp"/>

    </GridLayout>



</LinearLayout>